{{> header}}

{{#birds}}
<h1>{{page-name}}</h1>
<div class="page-subtitle">{{page-subtitle}}</div>

<img src="img/birds/{{bird-hero}}.jpg" alt="{{bird-hero-alt}}" class="bird-hero">
