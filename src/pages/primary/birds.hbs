{{> header}}

{{#birds}}
<h1>{{page-name}}</h1>
<div class="page-subtitle">{{page-subtitle}}</div>

<div class="gallery-intro">
  <p class="intro-text">{{intro}}</p>
  <div class="intro-btns">
    <a href="#" class="buy-book">Buy the Book</a>
    <a href="#">Learn More</a>
  </div>
</div>

<section class="gallery">
  <ul class="gallery-wrap list">
  {{#each categories}}
    <li class="img-li">
      <a href="birds/{{slug}}.html" title="{{category}}" class="galleryImg">
        {{#if imgFile}}<img src="img/{{../type}}/thumbs/{{imgFile}}-250.jpg" alt="{{imgTitle}}">{{/if}}
        <div class="info">
          <h2 class="title">{{category}}</h2>
          <p class="subtitle">{{subtitle}}</p>
        </div>
      </a>
    </li>
  {{/each}}
  </ul>
</section>
{{/birds}}

{{> footer}}