{{#gallery}}
<section class="gallery">

  <ul class="gallery-wrap grid">
    {{#each works}}
      <li class="img-li" data-id="{{@index}}" data-year="{{year}}{{#if month}}-{{month}}{{/if}}"{{#if filters}} data-filters="{{filters}}"{{/if}}>
        <a href="{{../type}}/{{imgFile}}.html" title="{{imgTitle}}" class="galleryImg">
          <img src="img/{{../type}}/thumbs/{{imgFile}}-250.jpg" alt="{{imgTitle}}">
          <div class="info">
            <h2 class="title">{{imgTitle}}</h2>
            <p class="year">{{year}}</p>
            {{#if photo-count}}<p class="count">{{photo-count}} photos</p>{{/if}}
          </div>
        </a>
      </li>
    {{/each}}
  </ul>

</section>
{{/gallery}}