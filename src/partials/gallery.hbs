{{#gallery}}
<section class="gallery">

  <div class="sort-method">
    <a href="#" id="sort-title" class="active">Title</a>
    <a href="#" id="sort-newest">Newest</a>
    <a href="#" id="sort-oldest">Oldest</a>
  </div>

  <ul class="grid">
    {{#each works}}
    <li class="img-li" data-id="{{@index}}" data-year="{{year}}">
      <a href="img/{{../type}}/{{imgFile}}.jpg" title="{{imgTitle}}" class="galleryImg" data-id="{{imgFile}}">
        <img src="img/{{../type}}/thumbs/{{imgFile}}-250.jpg" alt="{{imgTitle}}">
      </a>
      <div class="info">
        <h2 class="title">{{imgTitle}}</h2>
        <p class="year">{{year}}</p>
        <p class="medium">{{medium}}</p>
        {{#if location}}<p class="location">{{location}}</p>{{/if}}
        <p class="description">{{{description}}}</p>
      </div>
    </li>
    {{/each}}
  </ul>

  <div class="lightbox">
    <div class="lightbox-nav">
      <a href="#" class="prev-btn">Previous</a>
      <a href="#" class="close-btn">View All</a>
      <a href="#" class="next-btn">Next</a>
    </div>
    <div class="lightbox-content">
      <div class="lightbox-img">
        <img src="" alt="">
      </div>
      <div class="lightbox-info">
        <h2 class="lightbox-title"></h2>
        <div class="lightbox-meta">
          <span class="lightbox-year"></span> &bull; <span class="lightbox-medium"></span>
          <span class="lightbox-location-wrap"> &bull; <a href="http://maps.google.com/maps?q=" class="lightbox-location" target="_blank"></a></span>
        </div>
        <p class="lightbox-description"></p>
      </div>
    </div>
  </div>

  <div class="lightbox-loading">Loading...</div>

</section>
{{/gallery}}