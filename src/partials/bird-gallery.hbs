{{#bird-gallery}}
<div class="bird-gallery">

  <div class="gallery-intro">
    <p class="intro-text">{{intro}}</p>
    <div class="intro-btns">
      <a href="#" class="buy-book">Buy the Book</a>
    </div>
    <div class="gallery-nav">
      <a href="/birds.html">&laquo; Categories</a>
      <a href="#" id="show-slideshow">View Fullscreen</a>
    </div>
  </div>

  <div class="gallery-page bird-list">

  {{#each works}}
    <section class="img-section">

      <div class="img-inpage">
        <img src="/img/birds/{{imgFile}}.jpg" alt="{{imgTitle}}">
      </div>

      <div class="img-info">
        <div class="img-desc">
          <h2>{{bird}}</h2>
          <div class="latin">({{latin}})</div>
          {{#if location}}<div class="location">{{location}}</div>{{/if}}
          <div class="date">{{date}}</div>
          <p class="description">{{{description}}}</p>
          {{#if printUrl}}
          <div class="bird-btns">
            <a href="{{printUrl}}" target="_blank">Buy a Print</a>
          </div>
          {{/if}}
        </div>
      </div>

    </section>
  {{/each}}

  </div>

  <div class="slide-controls">
    <button type="button" id="hide-slideshow" title="Close slideshow">Close</button>
    <button type="button" id="prev-slideshow" title="Previous image">Previous Image</button>
    <button type="button" id="next-slideshow" title="Next image">Next Image</button>
  </div>

</div>
{{/bird-gallery}}