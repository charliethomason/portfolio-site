{{#bird-gallery}}
<div class="bird-gallery">

  <div class="gallery-intro">
    <p>{{intro}}</p>
    <div class="gallery-nav">
      <a href="/birds.html">&laquo; Return to Birds</a>
    </div>
  </div>

  <div class="gallery-view">
    <input type="radio" id="view-slideshow" name="view" value="slideshow" checked="checked"><label for="view-slideshow">View as Slideshow</label>
    <input type="radio" id="view-list" name="view" value="list"><label for="view-list">View as List</label>
  </div>

  <div class="gallery-page bird-slideshow">

  {{#each works}}
    <section class="img-section">

      <div class="img-inpage">
        <img src="/img/birds/{{imgFile}}.jpg" alt="{{imgTitle}}">
      </div>

      <div class="img-info">
        <div class="img-desc">
          <h2>{{bird}}</h2>
          <div class="latin">{{latin}}</div>
          <div class="bird-meta">
            {{#if location}}<span class="location">{{location}}</span>{{/if}}
            <span class="date">{{date}}</span>
          </div>
          <p>{{{description}}}</p>
          <div class="bird-btns">
            {{#if printUrl}}<a href="{{printUrl}}" target="_blank">Buy a Print</a>{{/if}}
            <a href="#" target="_blank">Buy the Book</a>
          </div>
        </div>
      </div>

    </section>
  {{/each}}

  </div>

  <button type="button" id="hide-slideshow">Close</button>

</div>
{{/bird-gallery}}